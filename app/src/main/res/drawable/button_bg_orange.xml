<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid
                android:color="#F6946B" />
            <stroke
                android:width="1dp"
                android:color="#f4510d" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="180"
                android:startColor="#f4510d"
                android:endColor="#f4510d"
                android:centerColor="#F38557"
                android:angle="270" />
<!--            android:centerColor="#F6946B"-->


            <stroke
                android:width="1dp"
                android:color="#F6946B" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>